import java.util.*;
import java.util.stream.*;
import java.util.Map.Entry;

public class Main {
    public static void main(String[] args) {

        class Product {
            String name;
            double price;
            String category;

            Product(String name, double price, String category) {
                this.name = name;
                this.price = price;
                this.category = category;
            }

            public String toString() {
                return name + " (" + category + ") - â‚¹" + price;
            }
        }

        List<Product> products = Arrays.asList(
                new Product("Laptop", 55000, "Electronics"),
                new Product("Phone", 30000, "Electronics"),
                new Product("Shoes", 2500, "Fashion"),
                new Product("Jacket", 4000, "Fashion"),
                new Product("Fridge", 45000, "Appliances")
        );

        // ðŸ”¹ Group by Category
        System.out.println("\nðŸ“‚ Grouped by Category:");
        Map<String, List<Product>> groupByCat = products.stream()
                .collect(Collectors.groupingBy(p -> p.category));
        groupByCat.forEach((cat, list) -> System.out.println(cat + " â†’ " + list));

        // ðŸ”¹ Max Price per Category
        System.out.println("\nðŸ’° Most Expensive Product in Each Category:");
        Map<String, Optional<Product>> maxPrice = products.stream()
                .collect(Collectors.groupingBy(
                        p -> p.category,
                        Collectors.maxBy(Comparator.comparingDouble(p -> p.price))
                ));
        maxPrice.forEach((cat, prod) -> System.out.println(cat + " â†’ " + prod.get()));

        // ðŸ”¹ Average Price
        double avg = products.stream()
                .collect(Collectors.averagingDouble(p -> p.price));
        System.out.println("\nðŸ“Š Average Price of All Products: â‚¹" + avg);
    }
}
